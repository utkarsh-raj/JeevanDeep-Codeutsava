
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/bankname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Smile Foundation"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="A unique way to live is by donation and so believe our foundation. To bring smile by blood donation."
                android:textSize="25sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/banknumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/telephone"
                android:inputType="number"
                android:text="7000116245"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:drawablePadding="10dp"/>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"

                >
                <TableRow
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/bankadress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/placeholder"
                        android:text="Pandri, Raipur"
                        android:textSize="25sp"
                        android:drawablePadding="10dp"
                        android:layout_gravity="center"

                        />
                    <ImageButton
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/share"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        />
                </TableRow>

            </TableLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>