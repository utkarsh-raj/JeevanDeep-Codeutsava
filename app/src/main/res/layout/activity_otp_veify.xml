<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:elevation="0dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <Toolbar
                android:id="@+id/toolbar"
                style="@style/ToolbarTheme"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:elevation="0dp"
                android:title="OTP VERIFICATION"
                android:titleTextColor="@color/black"
                app:titleTextColor="@color/colorPrimaryDark" />
        </LinearLayout>

    </LinearLayout>


    <ScrollView
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFDFD"
        tools:context=".getstarted.view.GetStartActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/imageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/login_logo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="25dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/otp" />

                <ProgressBar
                        android:id="@+id/imageProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1.5"></LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2.3"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Enter OTP"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="Sent to"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/textmobile"
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="+91"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>





            <LinearLayout
                android:id="@+id/deatilsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/mobile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginVertical="@dimen/margin_extra_large">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.2"></LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="2dp"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_gravity="center"
                    >
                    <EditText
                        android:layout_margin="@dimen/margin_normal"
                        android:padding="@dimen/margin_small"
                        android:id="@+id/etotpVerify1"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:ems="10"
                        android:hint="_"
                        android:inputType="number"
                        android:textColor="#000"
                        android:textSize="@dimen/textsize_large_18sp"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded" />

                </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="2dp"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_gravity="center"
                    >
                    <EditText
                        android:layout_margin="@dimen/margin_normal"
                        android:padding="@dimen/margin_small"
                        android:id="@+id/etotpVerify2"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:ems="10"
                        android:hint="_"
                        android:inputType="number"
                        android:textColor="#000"
                        android:textSize="@dimen/textsize_large_18sp"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded" />

                </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="2dp"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_gravity="center"
                    >
                    <EditText
                        android:layout_margin="@dimen/margin_normal"
                        android:padding="@dimen/margin_small"
                        android:id="@+id/etotpVerify3"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:ems="10"
                        android:hint="_"
                        android:inputType="number"
                        android:textColor="#000"
                        android:textSize="@dimen/textsize_large_18sp"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded" />

                </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="2dp"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_gravity="center"
                    >
                    <EditText
                        android:layout_margin="@dimen/margin_normal"
                        android:padding="@dimen/margin_small"
                        android:id="@+id/etotpVerify4"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:ems="10"
                        android:hint="_"
                        android:inputType="number"
                        android:textColor="#000"
                        android:textSize="@dimen/textsize_large_18sp"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded" />

                </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>


            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent">-->

                <Button
                    android:id="@+id/button_verify"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/background_gradient_button"
                    android:fontFamily="sans-serif"
                    android:padding="8dp"
                    android:text="verify"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textScaleX="1.1"
                    android:textSize="20sp"
                    android:layout_gravity="center"/>

