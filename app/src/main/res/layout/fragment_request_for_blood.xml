<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/colorOffWhite"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <Toolbar
                android:id="@+id/toolbar"
                style="@style/ToolbarTheme"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorOffWhite"
                android:elevation="0dp"
                android:title="Request for Blood"
                android:titleTextColor="@color/black"
                app:titleTextColor="@color/colorPrimaryDark" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/colorOffWhite"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <!--<ImageView-->
                <!--android:id="@+id/user_image"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="90dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginTop="@dimen/margin_medium"-->
                <!--android:layout_marginStart="@dimen/margin_extra_extra_large"-->
                <!--android:layout_marginEnd="@dimen/margin_extra_extra_large"-->
                <!--android:src="@drawable/ic_launcher_background" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_extra_large"
                    android:layout_marginEnd="@dimen/margin_extra_large"
                    android:layout_marginTop="@dimen/margin_extra_large">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_normal"
                        android:layout_gravity="center"
                        android:background="@drawable/text_input"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:padding="@dimen/margin_small">
                        <EditText
                            android:id="@+id/et_fullname"
                            android:padding="@dimen/margin_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:hint="Name"
                            android:inputType="text"
                            android:background="@color/transparent"
                            android:textColorHint="#D3D3D3"
                            android:textSize="@dimen/textsize_small_14sp"
                            android:layout_weight="3.7"
                            android:singleLine="true"/>
                        <TextView
                            android:id="@+id/tv_fullname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full Name"
                            android:gravity="end"
                            android:textSize="10sp"
                            android:textColor="#302F2F"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_normal"
                        android:layout_gravity="center"
                        android:background="@drawable/text_input"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:padding="@dimen/margin_small">
                        <EditText
                            android:id="@+id/et_mobileno"
                            android:padding="@dimen/margin_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:hint="Mobile Number"
                            android:inputType="number"
                            android:background="@color/transparent"
                            android:textColorHint="#D3D3D3"
                            android:textSize="@dimen/textsize_small_14sp"
                            android:layout_weight="3.7"
                            android:singleLine="true"/>
                        <TextView
                            android:id="@+id/tv_mobileno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile"
                            android:gravity="end"
                            android:textSize="10sp"
                            android:textColor="#302F2F"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_normal"
                        android:layout_gravity="center"
                        android:background="@drawable/text_input"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:padding="@dimen/margin_small">
                        <EditText
                            android:id="@+id/et_emailid"
                            android:padding="@dimen/margin_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:hint="Age"
                            android:inputType="textEmailAddress"
                            android:background="@color/transparent"
                            android:textColorHint="#D3D3D3"
                            android:textSize="@dimen/textsize_small_14sp"
                            android:layout_weight="3.7"
                            tools:ignore="RtlHardcoded"
                            android:singleLine="true"/>
                        <TextView
                            android:id="@+id/tv_emailid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age"
                            android:gravity="end"
                            android:textSize="10sp"
                            android:textColor="#302F2F"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_normal"
                        android:layout_gravity="center"
                        android:background="@drawable/text_input"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:padding="@dimen/margin_small">
                        <EditText
                            android:id="@+id/et_hospitalname"
                            android:padding="@dimen/margin_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:hint="Hospital Name"
                            android:inputType="text"
                            android:background="@color/transparent"
                            android:textColorHint="#D3D3D3"
                            android:textSize="@dimen/textsize_small_14sp"
                            android:layout_weight="3.7"
                            android:singleLine="true"/>
                        <TextView
                            android:id="@+id/tv_hospitalname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hospital"
                            android:gravity="end"
                            android:textSize="10sp"
                            android:textColor="#302F2F"
                            android:visibility="gone" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_normal"
                        android:layout_gravity="center"
                        android:background="@drawable/text_input"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:padding="@dimen/margin_small">

                        <EditText
                            android:id="@+id/et_treatment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.7"
                            android:background="@color/transparent"
                            android:gravity="left"
                            android:hint="Treatment"
                            android:inputType="text"
                            android:padding="@dimen/margin_normal"
                            android:textColorHint="#D3D3D3"
                            android:textSize="@dimen/textsize_small_14sp"
                            android:singleLine="true"/>
                        <TextView
                            android:id="@+id/tv_treatment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Treatment"
                            android:gravity="end"
                            android:textSize="10sp"
                            android:textColor="#302F2F"
                            android:visibility="gone" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_normal"
                        android:layout_gravity="center"
                        android:background="@drawable/text_input"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:padding="@dimen/margin_small">

                        <EditText
                            android:id="@+id/et_numberofunits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.7"
                            android:background="@color/transparent"
                            android:gravity="left"
                            android:hint="Number of units"
                            android:inputType="text"
                            android:padding="@dimen/margin_normal"
                            android:textColorHint="#D3D3D3"
                            android:textSize="@dimen/textsize_small_14sp"
                            android:singleLine="true"/>
                        <TextView
                            android:id="@+id/tv_numberofunits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Number of units"
                            android:gravity="end"
                            android:textSize="10sp"
                            android:textColor="#302F2F"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_normal"
                        android:layout_gravity="center"
                        android:background="@drawable/text_input"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:padding="@dimen/margin_small">

                        <EditText
                            android:id="@+id/et_bloodgroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.7"
                            android:background="@color/transparent"
                            android:gravity="left"
                            android:hint="Blood Group"
                            android:inputType="text"
                            android:padding="@dimen/margin_normal"
                            android:textColorHint="#D3D3D3"
                            android:textSize="@dimen/textsize_small_14sp"
                            android:singleLine="true"/>
                        <TextView
                            android:id="@+id/tv_bloodgroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Blood Group"
                            android:gravity="end"
                            android:textSize="10sp"
                            android:textColor="#302F2F"
                            android:visibility="gone"/>
                    </LinearLayout>



                    <Button
                        android:id="@+id/signup_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_extra_extra_large"
                        android:layout_marginStart="@dimen/margin_extra_extra_large"
                        android:layout_marginEnd="@dimen/margin_extra_extra_large"
                        android:text="SEND REQUEST"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/background_gradient_button"
                        />



                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>